<?xml version="1.0" encoding="UTF-8"?>
<jmeterTestPlan version="1.2" properties="5.0" jmeter="5.5">
  <hashTree>
    <TestFragmentController guiclass="TestFragmentControllerGui" testclass="TestFragmentController" testname="Shipment Volume Forecast API" enabled="true"/>
    <hashTree>
      
      <!-- OS Process Sampler for Payload Generation -->
      <JavaSampler guiclass="TestBeanGUI" testclass="JavaSampler" testname="Generate Shipment Forecast Payload (Python)" enabled="true">
        <stringProp name="classname">org.apache.jmeter.protocol.java.sampler.OSProcessSampler</stringProp>
        <elementProp name="arguments" elementType="Arguments">
          <collectionProp name="Arguments.arguments">
            <elementProp name="command" elementType="Argument">
              <stringProp name="Argument.name">command</stringProp>
              <stringProp name="Argument.value">python3 scripts/payload-generators/shipment_forecast_generator.py ${facility_id}</stringProp>
            </elementProp>
          </collectionProp>
        </elementProp>
        <stringProp name="resultVariable">request_payload</stringProp>
      </JavaSampler>
      <hashTree/>
      
